<div id="home-search-container">
  <div class="row">
        <div class="span8">
            <h1 class="head-title">Welcome to FOOLD </h2>
            <p class="head-message"><strong>Best restaurant reviews.</strong>
              <br />Everyone's a critic. </p>
        </div>
        <div class="span4" style="padding-bottom: 150px;">
            <div class="search-form">
                <p>Find a great Restaurant !!</p>
                <%= select_tag :restaurants, options_for_select(@restaurants.all.map{ |r| [r.name, "/restaurants/"+r.id.to_s]}), class: "selectRest", onclick: "location = this.value;"%>
            </div>
        </div>
  </div>
</div>
