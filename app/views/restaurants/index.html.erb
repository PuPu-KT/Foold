
<div id="home-search-container">
  <div class="row">
        <div class="span8">
          <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>">
                  <%= value %>
            </div>
          <% end %>
            <h1 class="head-title">DPR </h1>
            <p class="head-message"><strong><i>Damn power, lah.</i></strong>
              <br />Because Singaporeans like to complain. </p>
        </div>
        <div class="span4" style="padding-bottom: 150px;">
            <div class="search-form">
                <p>Find a great Restaurant. Or not.</p>
                <%= select_tag :restaurants, options_for_select(@restaurants.all.map{ |r| [r.name, "/restaurants/"+r.id.to_s]}), :include_blank => true, class: "selectRest", onchange: "location = this.value;"%>
            </div>
        </div>
  </div>
</div>
